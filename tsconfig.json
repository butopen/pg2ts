{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ]
}
